<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Workspaceview" parent="View">
    <child>
      <object class="GtkBox" id="top">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="spacing">3</property>

	<child>
          <object class="GtkActionBar" id="error_bar">
            <property name="revealed">false</property>
	    <style>
	      <class name="error_widget"/>
	    </style>

            <child type="center">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="spacing">15</property>

                <child>
                  <object class="GtkLabel" id="error_top">
                    <property name="ellipsize">middle</property>
                    <property name="selectable">true</property>
                    <property name="can-focus">false</property>
                    <style>
                      <class name="error_top"/>
                    </style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="error_sub">
                    <property name="ellipsize">middle</property>
                    <property name="selectable">true</property>
                    <property name="can-focus">false</property>
                    <style>
                      <class name="error_sub"/>
                    </style>
                  </object>
                </child>

              </object>
            </child>

            <child type="end">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>

                <child>
                  <object class="GtkButton">
                    <property name="label">Next</property>
                    <property name="valign">center</property>
                    <signal name="clicked"
                        handler="workspaceview_error_next_clicked"/>
                  </object>
                </child>

                <child>
                  <object class="GtkButton">
                    <property name="label">Previous</property>
                    <property name="valign">center</property>
                    <signal name="clicked"
                        handler="workspaceview_error_prev_clicked"/>
                  </object>
                </child>

                <child>
                  <object class="GtkButton">
                    <property name="label">OK</property>
                    <property name="valign">center</property>
                    <signal name="clicked"
                        handler="workspaceview_error_close_clicked"/>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

	<child>
          <object class="GtkActionBar" id="alert_bar">
            <property name="revealed">false</property>
	    <style>
	      <class name="alert_widget"/>
	    </style>

            <child type="center">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="spacing">15</property>

                <child>
                  <object class="GtkLabel" id="alert_top">
                    <property name="ellipsize">middle</property>
                    <property name="selectable">true</property>
                    <property name="can-focus">false</property>
                    <style>
                      <class name="error_top"/>
                    </style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="alert_sub">
                    <property name="ellipsize">middle</property>
                    <property name="selectable">true</property>
                    <property name="can-focus">false</property>
                    <style>
                      <class name="error_sub"/>
                    </style>
                  </object>
                </child>

              </object>
            </child>

            <child type="end">
              <object class="GtkButton">
                <property name="label">OK</property>
                <property name="valign">center</property>
                <signal name="clicked"
                    handler="workspaceview_alert_close_clicked"/>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>

            <child> <!-- left-hand pane -->
              <object class="GtkRevealer" id="left">
                <property name="transition-type">slide-right</property>
                <property name="hexpand">false</property>
                <property name="vexpand">true</property>

	        <child>
                  <object class="Toolkitgroupview" id="kitgview">
                    <property name="hexpand">false</property>
                    <property name="vexpand">true</property>
                    <style><class name="navigation-sidebar"/></style>
                    <style><class name="toolkitgroupview"/></style>

                  </object>
                </child>
              </object>
            </child>

            <child> <!-- paned for centre and right -->
              <object class="GtkPaned" id="paned">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="resize-start-child">true</property>
                <property name="resize-end-child">false</property>
                <property name="shrink-start-child">true</property>
                <property name="shrink-end-child">true</property>
                <property name="wide-handle">true</property>

                <property name="start-child"> <!-- centre area -->
                  <object class="GtkScrolledWindow" id="scrolled_window">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>

		    <child>
                      <object class="GtkFixed" id="fixed">

                        <!-- columns are added as children of this fixed -->

                        <child>
                          <object class="GtkGestureClick">
                            <property name="button">1</property>
			    <signal name="pressed"
				    handler="workspaceview_pressed"/>
                          </object>
                        </child>

                        <child>
                          <object class="GtkGestureDrag">
                            <signal name="drag-begin"
                                    handler="workspaceview_drag_begin"/>
                            <signal name="drag-update"
                                    handler="workspaceview_drag_update"/>
                            <signal name="drag-end"
                                    handler="workspaceview_drag_end"/>
                          </object>
                        </child>

                        <child>
                          <object class="GtkEventControllerKey">
                            <signal name="key-pressed"
                                    handler="workspaceview_key_pressed"/>
                          </object>
                        </child>

                      </object>
                    </child>

                  </object>
                </property>

                <property name="end-child"> <!-- right-hand pane -->
                  <object class="Workspacedefs" id="workspacedefs">
                    <property name="margin-start">5px</property>
                    <property name="margin-end">5px</property>
                    <property name="margin-top">5px</property>
                    <property name="hexpand">false</property>
                    <property name="vexpand">true</property>

                  </object>
                </property>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
