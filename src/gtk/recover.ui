<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Recover" parent="GtkWindow">
    <property name="title" translatable="yes">Recover workspace backups</property>
    <property name="modal">True</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">2</property>
        <property name="margin-start">5</property>
        <property name="margin-end">5</property>
        <property name="margin-top">5</property>
        <property name="margin-bottom">5</property>

        <child>
          <object class="GtkScrolledWindow">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="propagate-natural-height">true</property>
            <property name="max-content-height">600</property>

            <child>
              <object class="GtkColumnView" id="table">
                <style>
                  <class name="data-table"/>
                </style>


                <child>
                  <object class="GtkColumnViewColumn" id="date_column">
                    <property name="title">Date</property>
                    <property name="factory">
                      <object class="GtkBuilderListItemFactory">
                        <property name="bytes"><![CDATA[

<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkColumnViewCell">
    <property name="child">
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <binding name="label">
          <lookup name="date" type="SettingsKey">
            <lookup name="item">GtkColumnViewCell</lookup>
          </lookup>
        </binding>
      </object>
    </property>
  </template>
</interface>

                    ]]></property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkColumnViewColumn" id="time_column">
                    <property name="title">Time</property>
                    <property name="factory">
                      <object class="GtkBuilderListItemFactory">
                        <property name="bytes"><![CDATA[

<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkColumnViewCell">
    <property name="child">
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <binding name="label">
          <lookup name="time" type="SettingsKey">
            <lookup name="item">GtkColumnViewCell</lookup>
          </lookup>
        </binding>
      </object>
    </property>
  </template>
</interface>

                    ]]></property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkColumnViewColumn" id="size_column">
                    <property name="title">Size</property>
                    <property name="factory">
                      <object class="GtkBuilderListItemFactory">
                        <property name="bytes"><![CDATA[

<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkColumnViewCell">
    <property name="child">
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <binding name="label">
          <lookup name="size" type="SettingsKey">
            <lookup name="item">GtkColumnViewCell</lookup>
          </lookup>
        </binding>
      </object>
    </property>
  </template>
</interface>

                    ]]></property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkColumnViewColumn" id="id_column">
                    <property name="title">Process ID</property>
                    <property name="factory">
                      <object class="GtkBuilderListItemFactory">
                        <property name="bytes"><![CDATA[

<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkColumnViewCell">
    <property name="child">
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <binding name="label">
          <lookup name="id" type="SettingsKey">
            <lookup name="item">GtkColumnViewCell</lookup>
          </lookup>
        </binding>
      </object>
    </property>
  </template>
</interface>

                    ]]></property>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkActionBar">

            <child type="start">
              <object class="GtkButton" id="remove">
                <property name="label" translatable="yes">Delete all backups</property>
		<signal name="clicked" handler="recover_delete_clicked"/>
              </object>
            </child>

            <child type="end">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>

		<child>
                  <object class="GtkButton">
                    <property name="label" translatable="yes">Cancel</property>
		    <signal name="clicked" handler="recover_cancel_clicked"/>
                  </object>
	        </child>

		<child>
                  <object class="GtkButton" id="ok">
                    <property name="label" translatable="yes">Recover</property>
		    <signal name="clicked" handler="recover_ok_clicked"/>
                  </object>
	        </child>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>

